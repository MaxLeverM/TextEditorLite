<Window x:Class="TextEditorLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditorLite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="mainTextBox" HorizontalAlignment="Left" Height="364" Margin="10,45,0,0" VerticalAlignment="Top" Width="772" FontFamily="Consolas" AcceptsTab="True" Block.LineHeight="2">
            <FlowDocument>
                <Paragraph>
                    <Run Text=""/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <StackPanel Height="20" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" Orientation="Horizontal" HorizontalAlignment="Left" MinWidth="1">
            <Button x:Name="newBtn" Content="Новый" Width="75" Margin="10,0"/>
            <Button x:Name="loadBtn" Content="Загрузить" Width="75" Margin="10,0"/>
            <Button x:Name="saveBtn" Content="Сохранить" Width="75" Margin="10,0"/>
            <Button x:Name="saveAsBtn" Content="Сохранить как..." Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
